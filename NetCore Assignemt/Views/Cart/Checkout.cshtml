@model NetCore_Assignemt.Services.DTO.BillDTO
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Order Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Checkout Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Billing details</h1>
        <form action="#">
            <div class="alert" ></div>
            <div class="row g-5">   
                <div class="col-md-12 col-lg-6 col-xl-7">
                    <div class="form-item">
                        <label class="form-label my-3">Full Name : @Model.Name</label>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3">Address : @Model.Address</label>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3">Phone Number : @Model.Phone</label>
                    </div>
                    <div class="form-item">
                        <label class="form-label my-3">Email Address : @Model.Email</label>
                    </div>
                    <hr>
                </div>
                <div class="col-md-12 col-lg-6 col-xl-5">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Products</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Cart)
                                {
                                    <tr>
                                        <th scope="row">
                                            <div class="d-flex align-items-center mt-2">
                                                <img src="/images/@item.Book.ImagePath" class="img-fluid rounded-circle" style="width: 90px; height: 90px;" alt="">
                                            </div>
                                        </th>
                                        <td class="py-5">@item.Book.Title</td>
                                        <td class="py-5">$@item.Book.Price</td>
                                        <td class="py-5">@item.Quantity</td>
                                        <td class="py-5">$@item.SubTotal</td>
                                    </tr>
                                }
                                <tr>
                                    <th scope="row">
                                    </th>
                                    <td class="py-5"></td>
                                    <td class="py-5"></td>
                                    <td class="py-5">
                                        <p class="mb-0 text-dark py-3">Subtotal</p>
                                    </td>
                                    <td class="py-5">
                                        <div class="py-3 border-bottom border-top">
                                            <p class="mb-0 text-dark">@Model.Cart.Sum(p => p.SubTotal).ToString("#,##0") </p>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row g-4 text-center align-items-center justify-content-center border-bottom py-3">
                        <div class="col-12">
                            <div class="form-check form-check-inline text-start my-3">
                                <label class="form-check-label" for="Delivery-1">Cash On Delivery</label>
                                <input type="radio" class="form-check-input bg-primary border-0" id="Delivery-1" name="paymentMethod" value="CashOnDelivery" checked>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4 text-center align-items-center justify-content-center border-bottom py-3">
                        <div class="col-12">
                            <div class="form-check form-check-inline text-start my-3">
                                <label class="form-check-label" for="VnPay-1">VnPay</label>
                                <input type="radio" class="form-check-input bg-primary border-0" id="VnPay-1" name="paymentMethod" value="VnPay">
                            </div>
                        </div>
                    </div>

                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                        <button id="checkout" type="button" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary" onclick="checkOut()">Place Order</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Checkout Page End -->
