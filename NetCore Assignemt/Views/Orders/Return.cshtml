@model NetCore_Assignemt.Services.DTO.PaymentResponseDTO;

@{
    ViewData["Title"] = "Thanks You";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-5 py-5">
    <div class="container mt-5 py-5 pt-2">
        <h1 class="mb-4 text-center border-bottom"><b>Thank you!</b></h1>
        <div class="container mt-5">
            <div class="text-center">
                @if (Model.RspCode == "00")
                {
                    <div class="alert">
                        <h2 class="font-weight-bold" id="paymentStatus" style="color:#000;">@Model.Message</h2>
                    </div>
                    <!-- Display payment status with dynamic background color -->
                }
                else
                {
                    <div class="bg-danger p-5 bg-opacity-50 rounded-2 border-secondary">
                        <h2 class="font-weight-bold" id="paymentStatus" style="color: red;">@Model.Message</h2>
                    </div>
                }
                <!-- Display response code in a pill badge -->
                <div class="mt-3">
                    <span class="badge badge-pill badge-secondary" id="responseCode">Code: @Model.RspCode</span>
                </div>
            </div>
        </div>
    </div>
</div>